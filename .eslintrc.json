{
    "root": true,
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "plugins": [ "html" ],
    "rules": {
        "no-undef":"warn",
        "no-mixed-spaces-and-tabs": "warn"
    }
}
